{
  "name": "bakery-web-monorepo",
  "version": "1.0.0",
  "description": "Bakery Web Applications - Public Site & Admin Panel",
  "private": true,
  "scripts": {
    "install:all": "npm run install:public && npm run install:admin",
    "install:public": "cd bakery-public && npm install",
    "install:admin": "cd bakery-admin && npm install",
    "dev:public": "cd bakery-public && npm run dev",
    "dev:admin": "cd bakery-admin && npm run dev", 
    "build:all": "npm run build:public && npm run build:admin",
    "build:public": "cd bakery-public && npm run generate",
    "build:admin": "cd bakery-admin && npm run generate",
    "deploy": "node deploy.js",
    "deploy:public": "node deploy.js --public && firebase deploy --only hosting:bakery-public",
    "deploy:admin": "node deploy.js --admin && firebase deploy --only hosting:bakery-admin",
    "deploy:firebase-rules": "firebase deploy --only firestore:rules,firestore:indexes",
    "setup": "npm run install:all && npm run deploy:firebase-rules"
  },
  "keywords": [
    "bakery",
    "nuxt",
    "firebase",
    "admin-panel",
    "ecommerce"
  ],
  "author": "Your Name",
  "license": "MIT"
}