rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin Panel Collections - Allow all operations for now (secure in production)
    match /bakeryItems/{document} {
      allow read, write: if true; // Change to require auth in production
    }
    
    match /storageData/{document} {
      allow read, write: if true; // Change to require auth in production  
    }
    
    match /branches/{document} {
      allow read, write: if true; // Change to require auth in production
    }
    
    // Public collections for customer-facing app
    match /products/{document} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    match /categories/{document} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Orders - users can only access their own orders
    match /orders/{document} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || request.auth.token.admin == true);
      allow create: if request.auth != null;
    }
    
    // Users - users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == userId || request.auth.token.admin == true);
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}